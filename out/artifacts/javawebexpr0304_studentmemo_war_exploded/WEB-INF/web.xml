<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <welcome-file-list>
        <welcome-file>login.jsp</welcome-file>
    </welcome-file-list>

    <session-config>
        <!-- 时间单位为分钟 -->
        <session-timeout>30</session-timeout>
    </session-config>
    
    <servlet>
        <servlet-name>login</servlet-name>
        <servlet-class>servlet.LoginServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>login</servlet-name>
        <url-pattern>/LoginServlet</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>register</servlet-name>
        <servlet-class>servlet.RegisterServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>register</servlet-name>
        <url-pattern>/RegisterServlet</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>index</servlet-name>
        <servlet-class>servlet.IndexServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>index</servlet-name>
        <url-pattern>/IndexServlet</url-pattern>
    </servlet-mapping>

    <!--  访问 record.jsp 前判断是否登录  -->
    <servlet>
        <servlet-name>jlRecord</servlet-name>
        <servlet-class>servlet.JudgeLoginRecordServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>jlRecord</servlet-name>
        <url-pattern>/JudgeLoginRecordServlet</url-pattern>
    </servlet-mapping>

    <!--  前台展示 record 数据  -->
    <servlet>
        <servlet-name>showRecord</servlet-name>
        <servlet-class>servlet.ShowRecordServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>showRecord</servlet-name>
        <url-pattern>/ShowRecordServlet</url-pattern>
    </servlet-mapping>

    <!--  向数据库中插入 record 数据  -->
    <servlet>
        <servlet-name>insertRecord</servlet-name>
        <servlet-class>servlet.InsertRecordServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>insertRecord</servlet-name>
        <url-pattern>/InsertRecordServlet</url-pattern>
    </servlet-mapping>

    <!--  根据 id 删除 record 数据  -->
    <servlet>
        <servlet-name>deleteRecord</servlet-name>
        <servlet-class>servlet.DeleteRecordServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>deleteRecord</servlet-name>
        <url-pattern>/DeleteRecordServlet</url-pattern>
    </servlet-mapping>

    <!--  访问 diary.jsp 前判断是否登录  -->
    <servlet>
        <servlet-name>jlDiary</servlet-name>
        <servlet-class>servlet.JudgeLoginDiaryServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>jlDiary</servlet-name>
        <url-pattern>/JudgeLoginDiaryServlet</url-pattern>
    </servlet-mapping>

    <!--  前台展示 diary 数据  -->
    <servlet>
        <servlet-name>showDiary</servlet-name>
        <servlet-class>servlet.ShowDiaryServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>showDiary</servlet-name>
        <url-pattern>/ShowDiaryServlet</url-pattern>
    </servlet-mapping>

    <!--  向数据库中插入 diary 数据  -->
    <servlet>
        <servlet-name>insertDiary</servlet-name>
        <servlet-class>servlet.InsertDiaryServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>insertDiary</servlet-name>
        <url-pattern>/InsertDiaryServlet</url-pattern>
    </servlet-mapping>

    <!--  根据 id 删除 diary 数据  -->
    <servlet>
        <servlet-name>deleteDiary</servlet-name>
        <servlet-class>servlet.DeleteDiaryServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>deleteDiary</servlet-name>
        <url-pattern>/DeleteDiaryServlet</url-pattern>
    </servlet-mapping>
</web-app>